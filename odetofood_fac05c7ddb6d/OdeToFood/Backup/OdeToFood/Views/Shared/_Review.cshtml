@model OdeToFood.Models.Review


<div class="review">
    <h4>@Model.Restaurant.Name</h4>
    <span>Rating: @Model.Rating</span>
    <p>
        <span>
            @Html.Raw(Model.Body)
        </span>
        <span class="right">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
        </span>        
    </p>
</div>
